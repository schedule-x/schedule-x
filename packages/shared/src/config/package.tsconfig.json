{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,
    "types": ["vite/client"],
    "paths": {
      "@schedule-x/assertions": ["libs/assertions"]
    }
  },
  "exclude": ["node_modules", "dist", "tests"]
}
